<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_play_quiz"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="0dp"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    tools:context="ca.timandrew.timsquizap.PlayQuiz"
    android:background="@color/colorPrimaryDark">

    <Button
        android:text="@string/PlayQuiz_quit_quiz"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnQuit"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:background="@android:color/darker_gray"/>

    <Button
        android:text="Button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnQuiz2"
        android:layout_below="@+id/btnQuiz1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <Button
        android:text="Button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnQuiz3"
        android:layout_below="@+id/btnQuiz2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <Button
        android:text="Button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnQuiz4"
        android:layout_below="@+id/btnQuiz3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <TextView
        android:text="TextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tvQuizBox"
        android:background="@android:color/white"
        tools:layout_height="@android:dimen/thumbnail_height"
        android:textAlignment="center"
        android:gravity="center_vertical"
        android:minLines="8"
        android:layout_below="@+id/btnQuit"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        android:textIsSelectable="false"
        android:textAllCaps="true"
        android:textSize="18sp" />

    <TextView
        android:text="@string/PlayQuiz_pick_answer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvQuizBox"
        android:layout_centerHorizontal="true"
        android:id="@+id/tvPickAnswer"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:textSize="18sp" />

    <Button
        android:text="Button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnQuiz1"
        android:layout_below="@+id/tvPickAnswer"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tvUser"
        android:textColor="@android:color/white"
        android:text="@string/PlayQuiz_quiz_user"
        android:layout_below="@+id/btnQuiz4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textAlignment="center" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tvScore"
        android:textColor="@android:color/white"
        android:text="@string/PlayQuiz_quiz_score"
        android:textSize="24sp"
        android:textStyle="normal|bold"
        android:textAlignment="center"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
