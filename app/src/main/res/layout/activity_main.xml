<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="0dp"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    tools:context="ca.timandrew.timsquizap.MainActivity"
    android:background="@color/colorPrimaryDark">

    <TextView
        android:text="@string/MainActivity_username"
        android:textColor="#FFFFFF"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtName"
        android:layout_marginBottom="15dp"
        android:layout_above="@+id/etName"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/timsquizaplogo"
        android:id="@+id/ivLogo"
        android:layout_above="@+id/txtName"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="10dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/etName"
        android:background="@android:color/white"
        android:layout_marginBottom="46dp"
        android:layout_above="@+id/btnBegin"
        android:layout_centerHorizontal="true"
        android:autoText="false"
        android:textAlignment="center" />

    <Button
        android:text="@string/MainActivity_begin_quiz"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnBegin"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>
